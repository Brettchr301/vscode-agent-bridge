{
  "name": "vscode-agent-bridge",
  "displayName": "Agent Bridge",
  "description": "Local HTTP bridge giving AI agents full access to VS Code, GitHub Copilot, filesystem and terminal  all from localhost.",
  "version": "3.7.0",
  "publisher": "brettco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brettchr301/vscode-agent-bridge.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "AI"
  ],
  "keywords": [
    "ai",
    "agent",
    "copilot",
    "bridge",
    "deepseek",
    "automation",
    "llm",
    "http"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentBridge.copyUrl",
        "title": "Agent Bridge: Copy Endpoint URL"
      },
      {
        "command": "agentBridge.showLog",
        "title": "Agent Bridge: Open Request Log"
      },
      {
        "command": "agentBridge.copyToken",
        "title": "Agent Bridge: Copy Auth Token"
      },
      {
        "command": "agentBridge.showToken",
        "title": "Agent Bridge: Show Auth Token"
      },
      {
        "command": "agentBridge.securityDashboard",
        "title": "Agent Bridge: Security Dashboard"
      }
    ],
    "configuration": {
      "title": "Agent Bridge",
      "properties": {
        "agentBridge.authToken": {
          "type": "string",
          "default": "",
          "description": "Optional Bearer token. If set, all requests must include 'Authorization: Bearer <token>'. Strongly recommended on shared machines."
        },
        "agentBridge.slackBotToken": {
          "type": "string",
          "default": "",
          "description": "Slack bot token (xoxb-...) for POST /slack-post. Leave blank to read from ~/Documents/agent-bridge-config/settings.json."
        },
        "agentBridge.slackChannel": {
          "type": "string",
          "default": "",
          "description": "Default Slack channel ID for POST /slack-post."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "compile:mcp": "tsc -p ./mcp/tsconfig.json",
    "compile:all": "tsc -p ./ && tsc -p ./mcp/tsconfig.json",
    "watch": "tsc -watch -p ./",
    "start:sse": "node out/mcp/sse-server.js",
    "package": "npx @vscode/vsce package",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.ts"],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {"tsconfig": "tsconfig.test.json"}]
    }
  }
}
